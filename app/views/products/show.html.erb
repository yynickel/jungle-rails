<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Reviews</dt>
          <dd>
            <% @product.reviews.reverse.each { |review| %>
            <div>
              Review Id: <%= review.id%> <br/>
              Created by: <%= "#{review.user.first_name} #{review.user.last_name}"%> <br/>
              Review product: <%= review.product_id%> <br/>
              Review description: <%= review.description%> <br/>
              Review rating: <%= review.rating%> <br/>
              <% if current_user && current_user.id==review.user_id%>
                <%=link_to 'Delete this review', product_review_url(@product, review), :method=>:delete, class: 'btn btn-danger' %>
              <% end %>
            </div>
            <% } %>
          </dd>
        </dl>

        <% if current_user %>
        <div>
          <%= form_for :review, url:product_reviews_url(@product) do |f| %>
            <%= f.label :Description%>
            <%= f.text_area :description%>
            <%= f.label :Rating%>
            <%= f.select :rating, (1..5).to_a%>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.submit 'Submit'%>
          <% end %>
        </div>
        <% end %>

      </div>
    </div>

  </article>

</section>
